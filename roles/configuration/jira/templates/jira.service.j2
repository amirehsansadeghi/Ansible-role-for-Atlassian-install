[Unit]
Description=Atlassian Jira Service
After=syslog.target network.target
   
[Service]
Type=forking
User=jira
Group=atlassian
Environment=JAVA_HOME=/usr/lib/jvm/java-1.8.0-openjdk-1.8.0.222.b10-1.el7_7.x86_64
ExecStart=/opt/atlassian/atlassian-jira-core-8.4.2-standalone/bin/start-jira.sh
ExecStop=/opt/atlassian/atlassian-jira-core-8.4.2-standalone/bin/stop-jira.sh
   
[Install]
WantedBy=multi-user.target
