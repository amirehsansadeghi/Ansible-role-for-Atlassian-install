[Unit]
Description=Confluence
After=network.target

[Service]
Type=forking
User=confluence
PIDFile=/opt/atlassian/atlassian-confluence-7.0.2/work/catalina.pid
ExecStart=/opt/atlassian/atlassian-confluence-7.0.2/bin/start-confluence.sh
ExecStop=/opt/atlassian/atlassian-confluence-7.0.2/bin/stop-confluence.sh
TimeoutSec=200
LimitNOFILE=4096
LimitNPROC=4096

[Install]
WantedBy=multi-user.target